.wrapper
  = render 'home_slider'
  = render 'header_main'
  / = render 'section_features'
  %section.experts.bordered.transparent.center
    .container
      %h1.hero Crafted by Taiwan Youth.
      %p.center.sub-hero 發起由來原因.
      %a.button{href: "#"} Find out more
    / /.container
  / /.experts

  / = render 'our_company'
  = render 'our_team'
  = render 'courses'
  / = render 'testimonials'
  = render 'our_work'
  / = render 'portfolio_single'
  / = render 'pricing'
  / = render 'blog'

  %footer.main.contact
    .container
      %h1.hero Get in touch.
      #results
        #error.alert.alert-error
          Please fill in all required fields.
        #success.alert.alert-success
          Thanks for getting in touch. We will get back to you shortly!
      %img#loading{alt: "Loading", src:  asset_path("economizer/images/loading.gif")}/
      .row-fluid        
        .span3
          %h6
            %i.icon-envelope>
            Email
          %p
            info@4am-lesson.com
            / %br/
            / enquiries@economiser.com
          %hr/
        .span6.offset1
          %form#contact{action: "form.php", method: "POST"}
            .row-fluid
              .span6
                %input#name.req{name: "name", placeholder: "Name...", type: "text"}/
              / /.span6
              .span6
                %input#email.req{name: "name", placeholder: "Email...", type: "text"}/
              / /.span6
            / /.row-fluid
            .row-fluid
              .span12
                %textarea#comments.req{name: "comments", placeholder: "Comments..."}
                %input.pull-right{type: "submit", value: "Send!"}/
              / /.span12
            / /.row-fluid
        / /.span6
      / /.row-fluid
    / /.container

    = render 'copyright'
    / /footer.main
/ /.wrapper