.wrapper
  = render 'home_slider'
  = render 'header_main'
  / = render 'our_company'
  = render 'our_team'
  = render 'courses'
  = render 'testimonials'
  = render 'our_work'
  / = render 'portfolio_single'
  / = render 'pricing'
  / = render 'blog'

  %footer.main.contact
    .container
      %h1.hero Get in touch.
      #results
        #error.alert.alert-error
          Please fill in all required fields.
        #success.alert.alert-success
          Thanks for getting in touch. We will get back to you shortly!
      %img#loading{alt: "Loading", src:  asset_path("economizer/images/loading.gif")}/
      .row-fluid        
        .span10.offset1
          / %form#contact{action: "form.php", method: "POST"}
          = form_tag('/mails/contact_us', :method => :post) do
            .row-fluid
              - if current_user.nil?
                .span6
                  %input#name.req{name: "name", placeholder: "Name...", type: "text"}/
                .span6
                  %input#email.req{name: "name", placeholder: "Email...", type: "text"}/
              - else
                .span6
                  %input#name.req{name: "name", placeholder: "Name...", type: "text", value: current_user.name}/
                .span6
                  %input#email.req{name: "name", placeholder: "Email...", type: "text" ,value: current_user.email}/
            / /.row-fluid
            .row-fluid
              .span12
                %textarea#comments.req{name: "comments", placeholder: "Comments..."}
                %input.pull-right{type: "submit", value: "Send!"}/
              / /.span12
            / /.row-fluid
        / /.span6
      / /.row-fluid
    / /.container

    = render 'copyright'
    / /footer.main
/ /.wrapper